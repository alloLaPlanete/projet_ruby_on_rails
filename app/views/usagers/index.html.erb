<h1><%= t('usagers.menu')%></h1>


<hr />
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('usagers.nom')%></th>
      <th><%= t('usagers.courriel')%></th>
      <th><%= t('usagers.nom')%></th>
      <th><%= t('usagers.role')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usagers.each do |usager| %>
    <% if current_deviseuser.id == usager.deviseuser_id%>

      <tr>
        <td><%= usager.courriel %></td>
        <td><%= usager.nom %></td>
        <td><%= usager.motPasse %></td>
        <td><%= usager.role %></td>
        <td><%= link_to t('Show'), usager, class: 'btn btn-mini btn-primary' %></td>
        <td><%= link_to t('Edit'), edit_usager_path(usager),class: 'btn btn-mini btn-primary'  %></td>
        <td><%= link_to t('Destroy'), usager, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger' %></td>
      </tr>
       <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouveau Usager', new_usager_path, class: 'btn btn-mini btn-primary' %>
