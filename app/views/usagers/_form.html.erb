<%= simple_form_for(@usager) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :courriel %>
    <%= f.input :nom %>
    <%= f.input :motPasse %>
    
    <% if @usager.role == 'Directeur'%>
        <%= f.select(:role, options_for_select(['Directeur', ' Coordonateur', 'Adjoint Coordonateur', 'Intervenant'])) %>
  
    <% else %>
        <%= f.select(:role, options_for_select([' Coordonateur', 'Adjoint Coordonateur', 'Intervenant'])) %>
    <% end %>
 
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
